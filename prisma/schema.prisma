datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

enum UserRole {
    ADMIN
    USER
    MANAGER
}

model User {
    id Int @id @default(autoincrement())
    email String @unique
    password String
    name String
    role UserRole @default(USER)
    gifts Gift[]
}

model Gift {
    id      Int @id @default(autoincrement())
    user    User @relation(fields: [userId], references: [id])
    userId  Int 
    name    String 
    price   Int?
    description String?
}
