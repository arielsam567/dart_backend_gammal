datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

enum UserRole {
    ADMIN
    USER
    MANAGER
}

model User {
    id Int @id @default(autoincrement())
    email String @unique
    password String
    name String
    role UserRole @default(USER)
}

model Gift {
    id Int @id @default(autoincrement())
    userId Int 
    name String
}